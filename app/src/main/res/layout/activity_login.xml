    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_loginTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:defaultFocusHighlightEnabled="true"/>

    <EditText
        android:id="@+id/et_passwordTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_loginTxt"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"/>

        <ProgressBar
            android:id="@+id/pb_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_signinll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:layout_height="50dp"
            android:layout_width="50dp"
            android:src="@drawable/ic_login"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/bt_loginCheck"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="Login"
            android:textSize="20dp"
            android:textAlignment="viewStart"
            android:layout_weight="1"
            android:background="@color/colorGray50"/>

    </LinearLayout>

